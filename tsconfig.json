{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "ts-node": { "esm": true }
}
